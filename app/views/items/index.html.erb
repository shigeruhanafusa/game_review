<%= render "shared/header" %>

<div class="index-main">
  <div class="main-games">
    <div class="game">
      <div class="title">
      タイトル名
      </div>
      <div class="genre">
      ジャンル
      </div>
      <div class="rating">
      評価
      </div>
    </div>
    <% @items.each do |item| %>
      <li class="title-lists">
        <%= link_to item_path(item) do %>
          <h4 class="title-list">
            <%= item.title %>
          </h4>
        <% end %>
      </li>
    <% end %>
  </div>
</div>

<%= render "shared/footer" %>